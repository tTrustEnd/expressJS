extends ../layout/commom

block content 
    h1 Create User 
    if errors
        each error in errors 
            .alert.alert-danger= error

    form(action="/users/create", method="POST")
        .form-group
             label(for="name") Name
             input#name(name="name" type="text" ,value=values ? values.name : '')
        .form-group
             label(for="phone") Phone
             input#phone(name="phone" type="text",value=values ? values.phone : '')

        button.btn.btn-primary Create 