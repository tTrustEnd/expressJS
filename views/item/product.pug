extends ../layout/commom

block content 
    h1 Products

    .d-flex.align-items-center
        form.ml-auto(action="/products/search", method="GET", class="d-flex")
            input(type="text", name="q", class="form-control")
            button(class="btn btn-primary ml-2") Search
             

    .row
     each product in products
      .col-sm-6.col-md-2.col-lg-4.col-xl-3
        .card.mb-3
          img.card-img-top(src=product.image)
          .card-body
            h5.card-title= product.name
            p.card-text= product.description
            a.btn.btn-primary(href='/cart/add/' + product.id) Add to cart
    nav(aria-label='Page navigation example')
        ul.pagination
            li.page-item
                a.page-link(href='/item/product?page='+perPage, aria-label='Previous') Previous
                span(aria-hidden='true')
            li.page-item
                a.page-link(href='/item/product?page=1' ) 1
            li.page-item
                a.page-link(href='/item/product?page=2') 2
            li.page-item
                a.page-link(href='/item/product?page=3') 3
            li.page-item
                a.page-link(href='/item/product?page=4') 4
            li.page-item
                a.page-link(href='/item/product?page=5') 5
            li.page-item
                a.page-link(href='/item/product?page=6') 6
            li.page-item
                a.page-link(href='/item/product?page=7') 7
            li.page-item
                a.page-link(href='/item/product?page=8') 8
            li.page-item
                a.page-link(href='/item/product?page=9') 9
            li.page-item
                a.page-link(href='/item/product?page=10') 10
            li.page-item
                a.page-link(href='/item/product?page='+nextPage, aria-label='Next') Next
                span(aria-hidden='true')
          
